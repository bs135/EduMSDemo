@model IQueryable<ProductView>


<div class="col-xs-12">
    <div class="widget-box">
        <div class="widget-title">
            <span class="widget-title-icon fa fa-th"></span>
            <h5>@Headers.ManageProductsIndex</h5>
            <div class="widget-title-buttons">
                @if (Html.IsAuthorizedFor("Create"))
                {
                    <a class="btn" href="@Url.Action("Create")">
                        <i class="fa fa-file-o"></i><span class="text">@Actions.Create</span>
                    </a>
                }
            </div>
        </div>
        <div class="widget-content">
            @(Html
                .Grid(Model)
                .Build(columns =>
                {
                    columns.AddActionLink("Edit", "fa fa-pencil");
                    columns.AddActionConfirmLink("Delete", "fa fa-times", @Messages.ManageProductDeleteConfirmMessage);

                    columns.AddProperty(model => model.Name);
                    columns.AddProperty(model => model.SKU);
                    columns.AddProperty(model => model.StockQuanlity);
                    columns.AddProperty(model => model.IsActive);
                    columns.AddProperty(model => model.ProductGroupName);
                })
                .ApplyDefaults()
            )
        </div>
    </div>
</div>


