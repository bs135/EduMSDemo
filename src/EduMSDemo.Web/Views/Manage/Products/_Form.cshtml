@model ProductView

@{
    //String query = Request.QueryString.Count > 0 ? "?" + Request.QueryString : "";
    String controller = ViewContext.RouteData.Values["controller"] as String;
    String action = ViewContext.RouteData.Values["action"] as String;
    String id = ViewContext.RouteData.Values["id"] as String;
}

@using (Html.BeginForm(action, controller, new { area = "Manage", Id = id }, FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="control-label col-sm-12 col-md-3 col-lg-2">
            @Html.FormLabelFor(model => model.Name)
        </div>
        <div class="control-content col-sm-12 col-md-9 col-lg-5">
            @Html.FormTextBoxFor(model => model.Name)
        </div>
        <div class="control-validation col-sm-12 col-lg-5">
            @Html.ValidationMessageFor(model => model.Name)
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-sm-12 col-md-3 col-lg-2">
            @Html.FormLabelFor(model => model.SKU)
        </div>
        <div class="control-content col-sm-12 col-md-9 col-lg-5">
            @Html.FormTextBoxFor(model => model.SKU)
        </div>
        <div class="control-validation col-sm-12 col-lg-5">
            @Html.ValidationMessageFor(model => model.SKU)
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-sm-12 col-md-3 col-lg-2">
            @Html.FormLabelFor(model => model.StockQuanlity)
        </div>
        <div class="control-content col-sm-12 col-md-9 col-lg-5">
            @Html.FormTextBoxFor(model => model.StockQuanlity)
        </div>
        <div class="control-validation col-sm-12 col-lg-5">
            @Html.ValidationMessageFor(model => model.StockQuanlity)
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-sm-12 col-md-3 col-lg-2">
            @Html.FormLabelFor(model => model.IsActive)
        </div>
        <div class="control-content col-sm-12 col-md-9 col-lg-5">
            @Html.CheckBoxFor(model => model.IsActive)
        </div>
        <div class="control-validation col-sm-12 col-lg-5">
            @Html.ValidationMessageFor(model => model.IsActive)
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-sm-12 col-md-3 col-lg-2">
            @Html.FormLabelFor(model => model.ProductGroupId)
        </div>
        <div class="control-content col-sm-12 col-md-9 col-lg-5">
            @Html.DropDownList("ProductGroupId", null, new { @class = "form-control" })
        </div>
        <div class="control-validation col-sm-12 col-lg-5">
            @Html.ValidationMessageFor(model => model.ProductGroupId)
        </div>
    </div>

    <div class="form-group">
    </div>
    <div class="form-group">
        <div class="form-actions col-sm-12 col-lg-7">
            <button type="button" class="btn btn-default" onclick="window.history.back();">
                <i class="fa fa-chevron-left"></i>
                @Actions.Back
            </button>
            <button class="btn btn-primary" type="submit">
                <i class="fa fa-save"></i>
                @Actions.Submit
            </button>
        </div>
    </div>
}




