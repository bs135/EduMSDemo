@model FacultyManageBoardView

@{
    //String query = Request.QueryString.Count > 0 ? "?" + Request.QueryString : "";
    String controller = ViewContext.RouteData.Values["controller"] as String;
    String action = ViewContext.RouteData.Values["action"] as String;
    String id = ViewContext.RouteData.Values["id"] as String;
}

@using (Html.BeginForm(action, controller, new { area = "Manage", Id = id }, FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="control-label col-sm-12 col-md-3 col-lg-2">
            @*@Html.FormLabelFor(model => model.DeanId)*@
            <label for="DeanId">
                @EduMSDemo.Resources.Views.Manage.Teachers.FacultyManageBoard.FacultyManageBoardView.Titles.DeanName
            </label>
        </div>
        <div class="control-content col-sm-12 col-md-9 col-lg-5">
            @Html.DropDownList("DeanId", null, new { @class = "form-control" })
        </div>
        <div class="control-validation col-sm-12 col-lg-5">
            @Html.ValidationMessageFor(model => model.DeanId)
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-sm-12 col-md-3 col-lg-2">
            @*@Html.FormLabelFor(model => model.ViceDean1Id)*@
            <label for="ViceDean1Id">
                @EduMSDemo.Resources.Views.Manage.Teachers.FacultyManageBoard.FacultyManageBoardView.Titles.ViceDean1Name
            </label>
        </div>
        <div class="control-content col-sm-12 col-md-9 col-lg-5">
            @Html.DropDownList("ViceDean1Id", null, new { @class = "form-control" })
        </div>
        <div class="control-validation col-sm-12 col-lg-5">
            @Html.ValidationMessageFor(model => model.ViceDean1Id)
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-sm-12 col-md-3 col-lg-2">
            @*@Html.FormLabelFor(model => model.ViceDean2Id)*@
            <label for="ViceDean2Id">
                @EduMSDemo.Resources.Views.Manage.Teachers.FacultyManageBoard.FacultyManageBoardView.Titles.ViceDean2Name
            </label>
        </div>
        <div class="control-content col-sm-12 col-md-9 col-lg-5">
            @Html.DropDownList("ViceDean2Id", null, new { @class = "form-control" })
        </div>
        <div class="control-validation col-sm-12 col-lg-5">
            @Html.ValidationMessageFor(model => model.ViceDean2Id)
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-sm-12 col-md-3 col-lg-2">
            @Html.FormLabelFor(model => model.StartDate)
        </div>
        <div class="control-content col-sm-12 col-md-9 col-lg-5">
            @Html.FormDatePickerFor(model => model.StartDate)
        </div>
        <div class="control-validation col-sm-12 col-lg-5">
            @Html.ValidationMessageFor(model => model.StartDate)
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-sm-12 col-md-3 col-lg-2">
            @Html.FormLabelFor(model => model.EndDate)
        </div>
        <div class="control-content col-sm-12 col-md-9 col-lg-5">
            @Html.FormDatePickerFor(model => model.EndDate)
        </div>
        <div class="control-validation col-sm-12 col-lg-5">
            @Html.ValidationMessageFor(model => model.EndDate)
        </div>
    </div>
    <div class="form-group">
    </div>
    <div class="form-group">
        <div class="form-actions col-sm-12 col-lg-7">
            <button type="button" class="btn btn-default" onclick="window.history.back();">
                <i class="fa fa-chevron-left"></i>
                @Actions.Back
            </button>
            <button class="btn btn-primary" type="submit">
                <i class="fa fa-save"></i>
                @Actions.Submit
            </button>
        </div>
    </div>
}




