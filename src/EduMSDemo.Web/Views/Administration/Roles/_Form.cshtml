@model RoleView

@{
    //String query = Request.QueryString.Count > 0 ? "?" + Request.QueryString : "";
    String controller = ViewContext.RouteData.Values["controller"] as String;
    String action = ViewContext.RouteData.Values["action"] as String;
    String id = ViewContext.RouteData.Values["id"] as String;
}

@using (Html.BeginForm(action, controller, new { area = "Administration", Id = id }, FormMethod.Post, new { @class = "form-horizontal" }))
{
    <fieldset>
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="control-label col-sm-12 col-md-3 col-lg-2">
                @Html.FormLabelFor(model => model.Title)
            </div>
            <div class="control-content col-sm-12 col-md-9 col-lg-5">
                @Html.FormTextBoxFor(model => model.Title)
            </div>
            <div class="control-validation col-sm-12 col-lg-5">
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-sm-12 col-md-3 col-lg-2">
                @Html.FormLabelFor(model => model.Permissions)
            </div>
            <div class="control-content col-sm-12 col-md-9 col-lg-5">
                @Html.JsTreeFor(model => model.Permissions)
            </div>
            <div class="control-validation col-sm-12 col-lg-5">
                @Html.ValidationMessageFor(model => model.Permissions)
            </div>
        </div>
    </fieldset>

    <div class="form-actions">
        <div class="row">
            <div class="col-md-12">
                <button type="button" class="btn btn-default" onclick="window.history.back();">
                    <i class="fa fa-chevron-left"></i>
                    @Actions.Back
                </button>
                <button class="btn btn-primary" type="submit">
                    <i class="fa fa-save"></i>
                    @Actions.Submit
                </button>
            </div>
        </div>
    </div>

}

