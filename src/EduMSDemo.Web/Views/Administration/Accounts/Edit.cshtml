@model AccountEditView

<div class="col-xs-12">
    <div class="widget-box">
        <div class="widget-title">
            <span class="widget-title-icon fa fa-th-list"></span>
            <h5>@Headers.AdministrationAccounts</h5>
            <div class="widget-title-buttons">
                @if (Html.IsAuthorizedFor("Details"))
                {
                    <a class="btn" href="@Url.Action("Details", new { Model.Id })">
                        <i class="fa fa-info"></i><span class="text">@Actions.Details</span>
                    </a>
                }
            </div>
        </div>
        <div class="widget-content">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="control-label col-sm-12 col-md-3 col-lg-2">
                        @Html.FormLabelFor(model => model.Username)
                    </div>
                    <div class="control-content col-sm-12 col-md-9 col-lg-5">
                        @Html.FormTextBoxFor(model => model.Username)
                    </div>
                    <div class="control-validation col-sm-12 col-lg-5">
                        @Html.ValidationMessageFor(model => model.Username)
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-sm-12 col-md-3 col-lg-2">
                        @Html.FormLabelFor(model => model.Email)
                    </div>
                    <div class="control-content col-sm-12 col-md-9 col-lg-5">
                        @Html.FormTextBoxFor(model => model.Email)
                    </div>
                    <div class="control-validation col-sm-12 col-lg-5">
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-sm-12 col-md-3 col-lg-2">
                        @Html.FormLabelFor(model => model.IsLocked)
                    </div>
                    <div class="control-content col-sm-12 col-md-9 col-lg-5">
                        @Html.CheckBoxFor(model => model.IsLocked)
                    </div>
                    <div class="control-validation col-sm-12 col-lg-5">
                        @Html.ValidationMessageFor(model => model.IsLocked)
                    </div>
                </div>
                <div class="form-group">
                </div>
                <div class="form-group">
                    <div class="control-label col-sm-12 col-md-3 col-lg-2">
                        @Html.FormLabelFor(model => model.RoleId)
                    </div>
                    <div class="control-content col-sm-12 col-md-9 col-lg-5">
                        @Html.DatalistFor(model => model.RoleId, new Datalist<Role, RoleView>(Url))
                    </div>
                    <div class="control-validation col-sm-12 col-lg-5">
                        @Html.ValidationMessageFor(model => model.RoleId)
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-actions col-sm-12 col-lg-7">
                        <input class="btn btn-primary" type="submit" value="@Actions.Submit" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>
