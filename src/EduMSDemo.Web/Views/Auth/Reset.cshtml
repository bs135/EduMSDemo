@using EduMSDemo.Resources.Views.Auth.AccountResetView

@model AccountResetView

<div class="title text">@ContentTitles.AuthReset</div>
<div class="separator"></div>

@using (Html.BeginForm())
{
    <input type="password" style="display: none" /> @* Forcing browser to not remember following form inputs *@
    @Html.Partial("_AuthAlerts")

    @Html.AntiForgeryToken()
    <div class="auth-content">
        <div class="input-group">
            <span class="fa fa-lock"></span>
            @Html.PasswordFor(model => model.NewPassword, new { autocomplete = "off", placeholder = Titles.NewPassword })
            <span class="input-error fa fa-warning"></span>
        </div>
    </div>
    <input class="btn btn-primary" type="submit" value="@Actions.Submit" />
}

<div class="separator"></div>